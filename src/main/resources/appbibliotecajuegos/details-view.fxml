<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>


<BorderPane fx:id="ventana" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DetailsController">
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <center>
            <GridPane hgap="12.0" vgap="12.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Id" />
                  <Label text="Titulo" GridPane.rowIndex="1" />
                  <Label text="Plataforma" GridPane.rowIndex="2" />
                  <Label text="Año" GridPane.rowIndex="3" />
                  <Label text="Descripcion" GridPane.rowIndex="4" />
                  <Label text="Id Usuario" GridPane.rowIndex="5" />
                  <Label text="Imagen" GridPane.rowIndex="6" />
                  <TextArea fx:id="taDescripcion" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="tfId" GridPane.columnIndex="1" />
                  <TextField fx:id="tfTitulo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="tfPlataforma" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="tfAño" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="tfIdUsuario" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <ImageView fx:id="ivImagen" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="6" />
               </children>
               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </padding>
            </GridPane>
         </center>
      </BorderPane>
   </center>
   <bottom>
      <FlowPane alignment="CENTER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnVolver" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Volver" textAlignment="CENTER" />
         </children>
      </FlowPane>
   </bottom>
</BorderPane>
