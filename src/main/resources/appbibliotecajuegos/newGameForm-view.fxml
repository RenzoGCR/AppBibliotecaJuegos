<BorderPane prefHeight="527.0" prefWidth="305.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NewGameFormController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <GridPane hgap="12.0" vgap="12.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Titulo" />
                  <Label text="Plataforma" GridPane.rowIndex="1" />
                  <Label text="Año" GridPane.rowIndex="2" />
                  <Label text="Descripcion" GridPane.rowIndex="3" />
                  <Label text="Imagen" GridPane.rowIndex="4" />
                  <TextField fx:id="tfTitulo" GridPane.columnIndex="1" />
                  <TextField fx:id="tfPlataforma" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="tfAño" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="tfDescripcion" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="tfImagen" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               </children>
               <VBox.margin>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </VBox.margin>
            </GridPane>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
   </center>
   <bottom>
      <FlowPane alignment="CENTER" hgap="12.0" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Aceptar" />
            <Button mnemonicParsing="false" text="Cancelar" />
         </children>
      </FlowPane>
   </bottom>
   <top>
      <Label text="Nuevo Videojuego" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
   </top>
